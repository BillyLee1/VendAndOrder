<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Create an order</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
  @using VendorOrder.Models;
    <form action="/vendors/@Model.Id/orders" method="post">
      <label for="title">Title of order?</label>
      <input id="orderTitle" name="orderTitle" type="text">

      <label for="description">Description of order?</label>
      <input id="orderDesc" name="orderDesc" type="text">

      <label for="date">Date of order?</label>
      <input id="orderDate" name="orderDate" type="text">

      <label for="price">Price of order?</label>
      <input id="orderPrice" name="orderPrice" type="number">

      <button type="submit">Submit</button>
    </form>
  </body>
</html>
